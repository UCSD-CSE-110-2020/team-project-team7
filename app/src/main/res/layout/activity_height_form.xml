<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeightForm">

    <TextView
        android:id="@+id/edit_height_button"
        android:layout_width="257dp"
        android:layout_height="119dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/input_height_msg"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/feet_txt"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="ft."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/height_input_in"
        app:layout_constraintEnd_toStartOf="@+id/height_input_in"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/height_input_in"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/inches_txt"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="in."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/height_input_ft"
        app:layout_constraintEnd_toStartOf="@+id/height_input_ft"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/height_input_ft"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/height_save_btn"
        android:layout_width="205dp"
        android:layout_height="62dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/height_save_btn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <EditText
        android:id="@+id/height_input_ft"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="53dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:text="@string/default_height"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/height_save_btn"
        app:layout_constraintTop_toBottomOf="@+id/edit_height_button"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="277dp" />

    <EditText
        android:id="@+id/height_input_in"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="53dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:text="@string/default_height"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/height_save_btn"
        app:layout_constraintTop_toBottomOf="@+id/edit_height_button"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="103dp" />
</androidx.constraintlayout.widget.ConstraintLayout>